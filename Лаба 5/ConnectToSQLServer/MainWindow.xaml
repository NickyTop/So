        <Button Content="Торгівля" HorizontalAlignment="Left" Margin="86,304,0,0" VerticalAlignment="Top" Width="150" Height="55" Click="Trade_Click" Background="#D1B798" FontSize="18"/>
        <Button Content="Вихід" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Margin="618,304,0,0" Height="55" Background="LightSalmon" FontSize="18" Click="Exit_Click"/>


    </Grid>
</Window>
